pipeline {
    agent any
    tools {         
        maven 'Apache-maven-3.8.8'              
    }
    stages {
        // stage('Mvn install'){
        //     steps{
        //         sh 'mvn clean install'
        //     }
        // }
        stage("version"){
            steps{
                sh "python3 --version"
            }
        }
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage("Try Python"){
            steps{
                script{
                    String a = "Hi"
                    String b = "We"
//                    sh"""
//                    variable = python3 jenkins/pythtest.py
//                    variable.callFunc(${a}, ${b})
//                    """
 //                   variable = sh "python3 -c 'import pythtest; pythtest.callFunc()'"
  //                  def scriptOutput = sh(returnStdout: true, script: '${variable} ${a}, ${b}').trim()
                    def scriptOutput = sh(returnStdout: true, script: 'python3 jenkins/pythtest.py callFunc ${a} ${b}').trim()
                    echo "${a}"
                    echo "${b}"
                    echo "Script output: ${scriptOutput}"
                }
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
        stage('Complete'){
            steps{
                echo 'Job Complete!'
            }
        }
    }
}
